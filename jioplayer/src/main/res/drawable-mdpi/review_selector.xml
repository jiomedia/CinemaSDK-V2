<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/white" android:state_pressed="true">
        <shape>
            <solid android:color="@color/cinema_filterScreenColorPinkCode" />

            <stroke android:width="1dp" android:color="@color/cinema_filterScreenColorPinkCode"></stroke>
            <corners android:bottomRightRadius="6dp" />
        </shape>
    </item>

    <item android:color="@color/cinema_white" android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:bottomRightRadius="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:bottomRightRadius="6dp" />
        </shape>
    </item>
</selector>